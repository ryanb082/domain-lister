<div class='container'>
  <%= form_tag '/login' do %>
    <div class='form-group'>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <br>
    </div>

    <div class='form-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>

