<div class='container'>

  <%= form_for @user do |f| %>

    <div class='form-group'>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>
    </div>
    <div class='form-group'>
      <%= f.label :passowrd %>
      <%= f.password_field :password %>
      <br>
    </div>
    
    <%= f.submit 'Register', class: 'btn btn-success' %>
  <% end %>

</div>